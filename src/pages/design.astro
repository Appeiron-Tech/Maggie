---
import Layout from '../layouts/Layout.astro';
import HorizontalLoop from '../components/design/HorizontalLoop.astro';
import Greetings from '../components/design/Greetings.astro';
import Sections from '../components/design/Sections.astro';
import { CompanyStore } from '../stores/company.store';

const companyStore = new CompanyStore()
const company = await companyStore.getCompany()
---

<Layout company={company} title='- Design'>
	<main>
    <HorizontalLoop />
		<Greetings />
    <Sections />
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 2rem 1rem 1rem 1rem;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
</style>
