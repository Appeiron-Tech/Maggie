---
import { company } from "../stores/company.store";
import { companyWeb } from "../stores/companyWeb.store";
import ContactForm from "./home/ContactForm.astro";

---

<footer>
  <ContactForm 
    title={companyWeb.title}
	  subtitle={companyWeb.subtitle}
    sendLabel={companyWeb.sendLabel}
    contact={company.stores[0].contact}
    sns={company.stores[0].sns}
  />
  <div class="bg-white flex items-center justify-between px-16 py-12">
    <!-- logo -->
    <h1 class="w-3/12">
      <a href="/home">
        <div class="logo">{company.name}</div>
      </a>
    </h1>

    <!-- Term and conditions -->
    <div class="flex items-center">
      <span class="termConditions">
        Terms & Conditions
      </span>
      <a style="padding-inline: 0.75rem;">|</a>
      <span class="termConditions">
        Privacy Policy
      </span>
    </div>

    <div class="flex justify-end">
      <div class="nameAndYear">Â©2023 {company.name}</div>
    </div>
  </div>

</footer>

<style>
.logo {
  color: #706786;
  font-size: 35px;
  font-family: Cormorant Upright;
  font-weight: 500;
  line-height: 25px;
  word-wrap: break-word;
}

.termConditions {
  color: #878988;
  font-size: 20px;
  font-family: Cormorant Upright;
  font-weight: 600;
  text-decoration: underline;
  line-height: 25px;
  word-wrap: break-word
}

.nameAndYear {
  width: 100%; 
  color: #363636; 
  font-size: 20px; 
  font-family: Cormorant Upright; 
  font-weight: 600; 
  line-height: 25px; 
  word-wrap: break-word
}

</style>../stores/companyWeb.store